package com.example.mohan.config;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.cloud.gateway.route.RouteLocator;
import org.springframework.cloud.gateway.route.builder.RouteLocatorBuilder;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

import com.example.mohan.gateway.filter.JwtAuthenticationFilter;

@Configuration
public class GatewayConfig {

    @Autowired
    private JwtAuthenticationFilter jwtAuthenticationFilter;

    @Bean
    public RouteLocator routes(RouteLocatorBuilder builder) {
        return builder.routes()
            // Authentication service, public
            .route("auth-service-route", r -> r.path("/api/auth/**")
                .uri("lb://USER-AUTHENTICATION-SERVICE"))
            // Customer service route
            .route("customer-service-route", r -> r.path("/api/v1/customer/**")
                .filters(f -> {
                    JwtAuthenticationFilter.Config config = new JwtAuthenticationFilter.Config();
                    config.setRequiredRole("CUSTOMER,MANAGER,ADMIN");
                    return f.filter(jwtAuthenticationFilter.apply(config));
                })
                .uri("lb://CUSTOMER-SERVICE"))
            // Account service route
            .route("account-service-route", r -> r.path("/api/v1/accounts/**")
                .filters(f -> {
                    JwtAuthenticationFilter.Config config = new JwtAuthenticationFilter.Config();
                    config.setRequiredRole("CUSTOMER,MANAGER,ADMIN");
                    return f.filter(jwtAuthenticationFilter.apply(config));
                })
                .uri("lb://ACCOUNT-SERVICE"))
            // Payment service route
            .route("payment-service-route", r -> r.path("/api/v1/payments/**")
                .filters(f -> {
                    JwtAuthenticationFilter.Config config = new JwtAuthenticationFilter.Config();
                    config.setRequiredRole("CUSTOMER,MANAGER,ADMIN");
                    return f.filter(jwtAuthenticationFilter.apply(config));
                })
                .uri("lb://PAYMENT-SERVICE"))
            // Notification service route (MANAGER and ADMIN only)
            .route("notification-service-route", r -> r.path("/api/v1/notifications/**")
                .filters(f -> {
                    JwtAuthenticationFilter.Config config = new JwtAuthenticationFilter.Config();
                    config.setRequiredRole("MANAGER,ADMIN");
                    return f.filter(jwtAuthenticationFilter.apply(config));
                })
                .uri("lb://NOTIFICATION-SERVICE"))
            // Audit service route (ADMIN and MANAGER only)
            .route("audit-service-route", r -> r.path("/api/v1/audit/**")
                .filters(f -> {
                    JwtAuthenticationFilter.Config config = new JwtAuthenticationFilter.Config();
                    config.setRequiredRole("ADMIN,MANAGER");
                    return f.filter(jwtAuthenticationFilter.apply(config));
                })
                .uri("lb://AUDIT-SERVICE"))
            .build();
    }
}
