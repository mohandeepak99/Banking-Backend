package com.example.mohan.kafka;

import com.example.mohan.dto.PaymentResponseDTO;
import lombok.RequiredArgsConstructor;
import lombok.extern.slf4j.Slf4j;
import org.springframework.kafka.core.KafkaTemplate;
import org.springframework.stereotype.Service;

@Service
@RequiredArgsConstructor
@Slf4j
public class PaymentProducer {

    private static final String TOPIC = "payment-notification-topic";

    private final KafkaTemplate<String, PaymentResponseDTO> kafkaTemplate;

    public void sendPaymentNotification(PaymentResponseDTO paymentResponseDTO) {
        log.info("Sending payment notification for payment ID: {} to Kafka topic: {}", paymentResponseDTO.getPaymentId(), TOPIC);
        kafkaTemplate.send(TOPIC, paymentResponseDTO);
    }
}