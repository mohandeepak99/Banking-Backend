package com.example.mohan.service;

import com.example.mohan.dto.NotificationRequestDTO;
import com.example.mohan.dto.PaymentResponseDTO;
import com.example.mohan.exception.NotificationException;
import lombok.RequiredArgsConstructor;
import org.springframework.stereotype.Service;

@Service
@RequiredArgsConstructor
public class NotificationService {

    private final EmailSenderUtil emailSenderUtil;
    private final PaymentFeignClient paymentFeignClient;
    private final TemplateMessageService templateMessageService;

    public void sendPaymentNotification(Long paymentId, String recipientEmail) {
        try {
            PaymentResponseDTO payment = paymentFeignClient.getPaymentDetails(paymentId);
            if (payment == null) {
                throw new NotificationException("Payment details not found for id: " + paymentId);
            }

            String body = templateMessageService.generatePaymentSuccessMessage(payment);
            String subject = "Payment Confirmation - Transaction " + payment.getPaymentId();

            emailSenderUtil.sendEmail(recipientEmail, subject, body);
        } catch (Exception e) {
            throw new NotificationException("Failed to send payment notification: " + e.getMessage());
        }
    }

    public void sendCustomNotification(NotificationRequestDTO request) {
        emailSenderUtil.sendEmail(request.getRecipientEmail(), request.getSubject(), request.getBody());
    }
}
